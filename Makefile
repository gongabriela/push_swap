NAME = push_swap

CC = cc
CFLAGS = -Wall -Wextra -Werror

SRC =

OBJ = $(SRC:.c=.o)

all: $(NAME)
#linkar os objs do push_swap com o .a do libft e criar o ./push_swap (?)
$(NAME): $(OBJ)
	ar rc $(NAME) $(OBJ)

clean:
	rm -rf $(OBJ)

fclean: clean
	rm -rf $(NAME)

re: fclean all

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@
